{
  "name": "@webdoky/content-server",
  "version": "1.0.0",
  "description": "Content server for WebDoky project",
  "type": "module",
  "engines": {
    "node": ">= 16.13 <17"
  },
  "devDependencies": {
    "@types/node": "~16",
    "@typescript-eslint/eslint-plugin": "~5.26",
    "@typescript-eslint/parser": "~5.26",
    "eslint": "~8.16",
    "eslint-config-prettier": "~8.5",
    "prettier": "~2.6",
    "rimraf": "~3.0",
    "tsutils": "~3.21",
    "typescript": "~4.7"
  },
  "scripts": {
    "start": "node --experimental-specifier-resolution=node build/src/_starter.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "yarn run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "yarn run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "ava --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "ava --watch"
  },
  "author": "Jakub Synowiec <jsynowiec@users.noreply.github.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@webdoky/yari-ports": "2.16.3",
    "ava": "^4.3.0",
    "cyrillic-to-translit-js": "^3.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "github-slugger": "^1.4.0",
    "gray-matter": "^4.0.3",
    "is-absolute-url": "^4.0.1",
    "lodash": "^4.17.21",
    "mdast-util-to-hast": "^12.1.1",
    "mdast-util-to-string": "^3.1.0",
    "prism-themes": "^1.9.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^1.0.1",
    "rehype-parse": "^8.0.4",
    "rehype-prism": "^2.1.2",
    "rehype-raw": "^6.1.1",
    "rehype-stringify": "^9.0.3",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "ts-node": "^10.8.1",
    "tslib": "~2.4",
    "unified": "^10.1.1",
    "unist-util-visit": "^4.1.0",
    "unist-util-visit-parents": "^5.1.0"
  },
  "volta": {
    "node": "16.13.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "require": [
      "ts-node/register"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "files": [
      "!external/"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "verbose": true
  }
}
